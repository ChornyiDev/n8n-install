# Basic settings
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http
N8N_PATH=/

# External access settings
N8N_EDITOR_BASE_URL=https://your-domain.com

# Webhook settings behind reverse proxy
WEBHOOK_URL=https://your-domain.com/
#N8N_ENDPOINT_WEBHOOK=api
#N8N_ENDPOINT_WEBHOOK_TEST=api-test

# Timezone
GENERIC_TIMEZONE=UTC

# Database configuration
DB_TYPE=postgresdb
DB_POSTGRESDB_HOST=localhost
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_USER=your_db_user
DB_POSTGRESDB_PASSWORD=your_secure_password
DB_POSTGRESDB_PORT=5432
DB_SSL_REJECT_UNAUTHORIZED=false
SKIP_MIGRATIONS=false

# Community packages
N8N_COMMUNITY_PACKAGES_ALLOW_TOOL_USAGE=true

# Large file handling settings
#NODE_OPTIONS="--max-old-space-size=2048"
#N8N_DEFAULT_BINARY_DATA_MODE=filesystem
#N8N_PAYLOAD_SIZE_MAX=256

# Custom extensions directory
N8N_CUSTOM_EXTENSIONS=/home/n8n/.n8n/custom

# Enable workflow runners
N8N_RUNNERS_ENABLED=true